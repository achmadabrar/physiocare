# =============================================================================
# PHYSIOHOME BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
NODE_ENV=production
PORT=3000
APP_NAME=PhysioHome
APP_URL=https://api.physiohome.id

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=physiohome
DB_USER=physiohome_user
DB_PASSWORD=your_secure_password_here

# For Development (Local)
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=physiohome

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random_123456789
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_also_very_long_and_random

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@physiohome.id
SMTP_PASS=your_app_password_here
EMAIL_FROM=PhysioHome <noreply@physiohome.id>

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# SMS/WhatsApp API (Optional)
SMS_API_KEY=your_sms_api_key
WHATSAPP_API_TOKEN=your_whatsapp_api_token

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=3600000

# CORS Configuration
ALLOWED_ORIGINS=https://physiohome.id,https://www.physiohome.id,http://localhost:3000

# Development Settings (uncomment for development)
# NODE_ENV=development
# LOG_LEVEL=debug
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000